{
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "extends": ["next/core-web-vitals", "airbnb", "airbnb-typescript", "prettier"],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "jsx-a11y/anchor-is-valid": "off"
  },
  "env": {
    "jest": true
  }
}
